.loader {
  position: relative;
  margin: auto;
  box-sizing: border-box;
  background-clip: padding-box;
  width: 300px;
  height: 100px;
  border-radius: 100px;
  border: 8px solid rgba(255, 255, 255, 0.1);
  -webkit-mask: linear-gradient(rgba(0, 0, 0, 0.1), #000000 90%);
  mask: linear-gradient(rgba(0, 0, 0, 0.1), #000000 90%);
  transform-origin: 50% 60%;
  transform: perspective(200px) rotateX(66deg);
  animation: spinner-wiggle 1s infinite;
}

.loader:before,
.loader:after {
  content: "";
  position: absolute;
  margin: -4px;
  box-sizing: inherit;
  width: inherit;
  height: inherit;
  border-radius: inherit;
  opacity: 0.05;
  border: inherit;
  border-color: transparent;
  animation: spinner-spin 1.2s cubic-bezier(0.6, 0.2, 0, 0.8) infinite,
    spinner-fade 1s linear infinite;
}

.loader:before {
  border-top-color: #ffffff;
}

.loader:after {
  border-top-color: #f0d175;
  animation-delay: 0.3s;
}

@keyframes spinner-spin {
  100% {
    transform: rotate(360deg);
  }
}

@keyframes spinner-fade {
  20% {
    opacity: 0.1;
  }

  40% {
    opacity: 1;
  }

  60% {
    opacity: 0.1;
  }
}

/* ==================== nav loader ===================== */
.looader {
  position: relative;
  width: 250px;
  height: 3px;
  background: linear-gradient(to right,
      transparent,
      var(--color-primary),
      transparent);
  overflow: hidden;
}

.looader::after {
  content: "";
  position: absolute;
  translate: -200px 0;
  width: 150px;
  height: 100%;
  background: linear-gradient(to right, transparent, #212121, transparent);
  animation: slide 0.8s infinite;
}

@keyframes slide {
  100% {
    translate: 300px 0;
  }
}

/* ==================== navbar top ===================== */
/* ==================== navbar top ===================== */
.navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 98%;
  /* Maximum width */
  min-width: auto;
  max-width: 100%;
  /* Allow full expansion */
  padding: 0.8rem 2rem;
  position: absolute;
  top: 1.5rem;
  left: 50%;
  transform: translateX(-50%);
  z-index: 100;
  background: rgba(33, 32, 30, 0.6);
  /* Glass background */
  backdrop-filter: blur(15px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 3rem;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  animation: slideDown 0.8s ease forwards;
  opacity: 0;
  /* Start invisible for animation */
}

@keyframes slideDown {
  from {
    top: -5rem;
    opacity: 0;
  }

  to {
    top: 1.5rem;
    opacity: 1;
  }
}

.navbar:hover {
  background: rgba(33, 32, 30, 0.8);
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
  border-color: rgba(255, 255, 255, 0.2);
}

.logo h3 {
  color: var(--color-primary);
  font-size: 1.2rem;
  font-weight: 600;
  margin: 0;
  letter-spacing: 1px;
  white-space: nowrap;
}

.nav__links {
  display: flex;
  align-items: center;
  gap: 1rem;
  background: transparent;
  /* Removed inner background */
  padding: 0;
  border: none;
  backdrop-filter: none;
}

.social__links {
  display: flex;
  align-items: center;
  gap: 0.8rem;
  padding-left: 1rem;
  border-left: 1px solid rgba(255, 255, 255, 0.1);
}

.social__links a {
  display: flex;
  align-items: center;
  gap: 0.3rem;
  color: var(--color-light);
  font-size: 0.7rem;
  /* Smaller text size */
  font-weight: 500;
  transition: all 0.3s ease;
  padding: 0.3rem 0.5rem;
  border-radius: 0.5rem;
  text-decoration: none;
}

.social__links a:hover {
  color: var(--color-white);
  background: rgba(255, 255, 255, 0.1);
  transform: translateY(-2px);
}

.social__links a svg {
  font-size: 0.9rem;
  /* Smaller icon size */
}

.social__links a p {
  margin: 0;
  display: block;
  /* Ensure text is visible */
}

/* Navbar links (Navigation only) */
.nav__links a {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  color: var(--color-light);
  text-decoration: none;
  font-size: 0.9rem;
  font-weight: 500;
  border-radius: 2rem;
  transition: all 0.3s ease;
}

.nav__links a i {
  font-size: 1.1rem;
}

/* Navbar links on mouse-over */
.nav__links a:hover {
  color: var(--color-white);
  background: rgba(255, 255, 255, 0.1);
  transform: translateY(-2px);
}

/* Current/active navbar link */
.actives {
  background: var(--color-primary) !important;
  color: var(--color-bg) !important;
  box-shadow: 0 4px 15px rgba(254, 179, 20, 0.3);
  transform: translateY(-2px);
}

.actives p {
  color: var(--color-bg);
  margin: 0;
  font-weight: 600;
}

.actives i {
  color: var(--color-bg);
}

/* Hide the loader line in navbar as it conflicts with the new clean design */
.looader {
  display: none;
}

/* Add responsiveness - will automatically display the navbar vertically instead of horizontally on screens less than 500 pixels */
@media screen and (max-width: 500px) {
  .navbar a {
    float: none;
    display: block;
  }
}

/* ==================== header ===================== */
header {
  height: 100vh;
  padding-top: 2rem;
  overflow: hidden;
}

.hed {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.header__container {
  height: 100%;
  position: relative;
  overflow: hidden;
}

/* ==================== CTA ===================== */
.cta {
  margin-top: 2.5rem;
  display: flex;
  gap: 0.6rem;
  justify-content: center;
  padding-left: 35px;
}

/* ==================== HEADER SOCIALS ===================== */
.header__socials {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
  position: absolute;
  left: 0;
  bottom: 19rem;
}

.header__socials::after {
  content: "";
  height: 2rem;
  background: var(--color-primary);
}

/* ==================== ME IMAGE ===================== */
.me {
  height: 45rem;
}

.me-top {
  display: flex;
  align-items: center;
  justify-content: center;
  left: calc(50% - 11rem);
  margin-top: 4rem;
  border-radius: 12rem 12rem 0 0;
  overflow: hidden;
  padding: 5rem 1.5rem 0rem 1.5rem;
  width: 22rem;
  height: 30rem;
}

.me-top img {
  width: 330px;
}

/* ==================== SCROLL DOWN ===================== */
.scroll__down {
  position: absolute;
  right: -2.3rem;
  bottom: 28rem;
  transform: rotate(90deg);
  font-weight: 300;
  font-size: 0.9rem;
}

/* ================= MEDIA QUERIES (MEDIUM DEVICES) ================= */
@media screen and (min-width: 1024px) {
  .hed {
    margin-top: 70px;
  }
}

@media screen and (max-width: 1024px) {
  .navbar {
    display: none;
  }

  .header__container {
    justify-content: space-around;
    height: 100%;
    position: relative;
  }

  .hed {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
  }

  header {
    height: 68vh;
  }
}

/* ================= MEDIA QUERIES (SMALL DEVICES) ================= */
@media screen and (max-width: 600px) {
  header {
    height: 100vh;
  }

  .header__socials,
  .scroll__down {
    display: none;
  }
}

.det h5 {
  padding-left: 30px;
  font-size: 1.3rem;
}

.det h1 {
  padding-left: 30px;
  font-size: 2.5rem;
}

/* ================= AI button ================= */

.btnas {
  border: none;
  width: 7em;
  height: 4em;
  border-radius: 4em;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12px;
  background: #1c1a1c;
  cursor: pointer;
  transition: all 450ms ease-in-out;
}

.sparkle {
  fill: #aaaaaa;
  transition: all 800ms ease;
}

.textas {
  font-weight: 600;
  color: #aaaaaa;
  font-size: medium;
}

.btnas:hover {
  background: linear-gradient(0deg, #ffc64297, #eaba3f);
  box-shadow: inset 0px 1px 0px 0px rgba(255, 255, 255, 0.4),
    inset 0px -4px 0px 0px rgba(0, 0, 0, 0.2),
    0px 0px 0px 4px rgba(255, 255, 255, 0.2), 0px 0px 180px 0px #ffbd17;
  transform: translateY(-2px);
}

.btnas:hover .textas {
  color: white;
}

.btnas:hover .sparkle {
  fill: white;
  transform: scale(1.2);
}

/* ================= background moving ================= */

@keyframes move {
  100% {
    transform: translate3d(0, 0, 1px) rotate(360deg);
  }
}

